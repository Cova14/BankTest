<!DOCTYPE HTML>
<html>
<head> 
<script>
    var fecha = new Date(<%= fecha %>);
    var fechaGraph = fecha.setMonth(fecha.getMonth()-1)
    var fecha1 = new Date(<%= fecha1 %>);
    var fechaGraph1 = fecha1.setMonth(fecha.getMonth());

    window.onload = function () {
    
        var chart = new CanvasJS.Chart("chartContainer", {
            animationEnabled: true,
            zoomEnabled: true,
            title:{
                text: "Retiros de Bancomer"
            },
            axisX: {
                intervalType: "day",
                interval: 1,
                title:"Fecha",
                valueFormatString: "DD-MMM-YY" ,
                labelAngle: -50
            },
            axisY:{
                title: "Cantidad",
                valueFormatString: "$###,###.##"
            },
            data: [{
                type: "scatter",
                toolTipContent: "<b>Price: </b>${y}",
                dataPoints: [
                    { x: new Date(fechaGraph), y: <%= total %>},
                    { x: new Date(fechaGraph1), y: <%= total1 %>}
                ]
        }]
    });
    chart.render();
    
    }
</script>
</head>
<body>
<div id="chartContainer" style="height: 300px; width: 100%;"></div>
<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>


<a href="/">Inicio</a>
</body>
</html>